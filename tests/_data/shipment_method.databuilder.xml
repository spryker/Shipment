<?xml version="1.0"?>
<transfers
        xmlns="spryker:transfer-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ShipmentMethod">
        <property name="name" dataBuilderRule="word(5)" />
        <property name="isActive" dataBuilderRule="=1" />
        <property name="fkShipmentCarrier" dataBuilderRule="=1" />
        <property name="taxRate" dataBuilderRule="randomFloat(2, 0, 99)" />
    </transfer>

    <transfer name="ShipmentCarrier">
        <property name="name" dataBuilderRule="word(1)" />
        <property name="isActive" dataBuilderRule="=1" />
    </transfer>

    <transfer name="Shipment">
        <property name="shippingAddress" type="Address" />
        <property name="method" type="ShipmentMethod" />
    </transfer>

    <transfer name="Quote">
        <property name="shipment" type="Shipment" />
        <property name="shippingAddress" type="Address" />
        <property name="billingAddress" type="Address" />
        <property name="items" type="Item[]" />
        <property name="totals" dataBuilderRule="randomNumber(5)" />
        <property name="customer" type="Customer" />
        <property name="currency" type="Currency" />
    </transfer>

    <transfer name="Item">
        <property name="sku" dataBuilderRule="isbn10" />
        <property name="unitPrice" dataBuilderRule="randomNumber(3)" />
        <property name="sumPrice" dataBuilderRule="randomNumber(3)" />
        <property name="amount" dataBuilderRule="randomNumber(1)" />
    </transfer>

    <transfer name="Address">
        <property name="iso2Code" dataBuilderRule="=DE" />
    </transfer>

    <transfer name="Expense">
        <property name="type" dataBuilderRule="=SHIPMENT_EXPENSE_TYPE" />
        <property name="taxRate" dataBuilderRule="randomFloat(2, 0, 99)" />
        <property name="shipment" type="Shipment" />
    </transfer>

</transfers>
